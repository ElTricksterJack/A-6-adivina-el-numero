print(" ")
print("Ruvalcaba Valverde Miguel Angel")
print("-----------Ingresar Numeros-----------")
import random

numero_secreto = random.randint(1, 100)

intentos= 7

print("¡Bienvenido al juego de adivinar el número!")
print("Tienes que adivinar un número entre 1 y 100. Tienes 7 intentos.")
while intentos > 0:


  try:
      adivinanza = int(input("Adivina el número (entre 1 y 100): "))
  except ValueError:
      print("¡Error! Debes ingresar un número entero.")
      continue

  if adivinanza == numero_secreto:
      print("¡Felicidades! Has adivinado el número.")
      break
   
  elif adivinanza < numero_secreto:
      print("El número es más grande.")
  else:
      print("El número es más pequeño.")
  
  intentos -= 1
  print(f"Te quedan {intentos} intentos.")

if intentos == 0:
  print(f"¡Se acabaron los intentos! El número secreto era {numero_secreto}.")
print("--------------------------------------")
print("Resultado: hey se sabe cual es el numero")
print(" ")
